{
  "env": {
    "node": true,
    "commonjs": true
  },
  "extends": "eslint:recommended",
  "plugins": ["simple-import-sort"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": 0,
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "simple-import-sort/imports": "error"
  }
}
